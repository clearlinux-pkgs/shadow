From: William Douglas <william.douglas@intel.com>
Date: Tue, 3 Apr 2018 19:49:38 +0000
Subject: [PATCH 02/10] Allow lower case n for no group

---
 src/useradd.c | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/src/useradd.c b/src/useradd.c
index 0e0fa1f..68a3582 100644
--- a/src/useradd.c
+++ b/src/useradd.c
@@ -1045,6 +1045,7 @@ static void process_flags (int argc, char **argv)
 			{"create-home",    no_argument,       NULL, 'm'},
 			{"no-create-home", no_argument,       NULL, 'M'},
 			{"no-user-group",  no_argument,       NULL, 'N'},
+			{"no-user-group2",  no_argument,       NULL, 'n'},
 			{"non-unique",     no_argument,       NULL, 'o'},
 			{"password",       required_argument, NULL, 'p'},
 			{"system",         no_argument,       NULL, 'r'},
@@ -1059,9 +1060,9 @@ static void process_flags (int argc, char **argv)
 		};
 		while ((c = getopt_long (argc, argv,
 #ifdef WITH_SELINUX
-		                         "b:c:d:De:f:g:G:hk:K:lmMNop:rR:s:u:UZ:",
+		                         "b:c:d:De:f:g:G:hk:K:lmMNnop:rR:s:u:UZ:",
 #else				/* !WITH_SELINUX */
-		                         "b:c:d:De:f:g:G:hk:K:lmMNop:rR:s:u:U",
+		                         "b:c:d:De:f:g:G:hk:K:lmMNnop:rR:s:u:U",
 #endif				/* !WITH_SELINUX */
 		                         long_options, NULL)) != -1) {
 			switch (c) {
@@ -1212,6 +1213,7 @@ static void process_flags (int argc, char **argv)
 			case 'M':
 				Mflg = true;
 				break;
+			case 'n':
 			case 'N':
 				Nflg = true;
 				break;
